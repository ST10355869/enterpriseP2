@using System.Security.Claims
@{
    ViewData["Title"] = "Access Denied";
}

<h1 class="text-danger">Access Denied</h1>
<p class="text-warning">You don't have permission to access this resource.</p>

@if (User.Identity.IsAuthenticated)
{
    <p>You are logged in as: @User.Identity.Name</p>
    <p>Your roles: @string.Join(", ", User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value))</p>
}

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>